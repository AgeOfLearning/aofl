{
  "verbose": true,
  "persistent": false,
  "plugins": {
    "local": {
      "browsers": ["firefox", "chrome", "canary", "safari"],
      "browserOptions": {
        "chrome": ["headless"],
        "canary": ["headless"],
        "firefox": ["-headless"]
      }
    },
    "istanbul": {
      "dir": "../docs/v1.x/coverage/",
      "reporters": ["text-summary", "lcov"],
      "include": "**/*.js",
      "exclude": [
        "**/node_modules",
        "**/node_modules_sourced",
        "**/documentation{,!(/tests/**)}",
        "**/__config",
        "**/cli",
        "**/*-instance/**",
        "**/*-loader/**",
        "**/*-polyfill/**",
        "**/*-plugin/**",
        "**/router/examples"
      ]
    }
  }
}
