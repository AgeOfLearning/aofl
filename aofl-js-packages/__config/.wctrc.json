{
  "verbose": false,
  "persistent": false,
  "plugins": {
    "local": {
      "browsers": [
        "firefox",
        "chrome"
      ],
      "browserOptions": {
        "chrome": [
          "headless"
        ],
        "firefox": [
          "-headless"
        ]
      }
    },
    "istanbul": {
      "dir": "./coverage/",
      "reporters": [
        "text-summary",
        "lcov"
      ],
      "include": "**/*.js",
      "exclude": [
        "**/node_modules",
        "**/node_modules_sourced",
        "**/documentation{,!(/tests/**)}",
        "**/__config",
        "**/cli",
        "**/*-instance/**",
        "**/*-loader/**",
        "**/*-polyfill/**",
        "**/*-plugin/**",
        "**/router/examples"
      ]
    }
  }
}
